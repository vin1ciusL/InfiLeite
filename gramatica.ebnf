(* InfiLeite - EBNF (vers√£o estendida com comandos do jogo) *)

program        = { statement } ;

statement      = assignment
               | function_call
               | print_statement
               | while_statement
               | if_statement
               | ";" ;

assignment     = identifier "=" expression ";" ;

function_call  = identifier "(" [ expression ] ")" ";" ;

print_statement = "print" "(" expression ")" ";" ;

while_statement = "enquanto" "(" expression ")" "{" { statement } "}" ;

if_statement   = "se" "(" expression ")" "{" { statement } "}"
               [ "senao" "{" { statement } "}" ] ;

expression     = term { ("+" | "-" ) term } ;

term           = factor { ("*" | "/" | "%" ) factor } ;

factor         = number
               | identifier
               | identifier "(" expression [ "," expression ] ")"
               | "(" expression ")"
               ;

identifier     = letter { letter | digit | "_" } ;
number         = digit { digit } ;

letter         = "a"..."z" | "A"..."Z" ;
digit          = "0"..."9" ;
