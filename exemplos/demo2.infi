# Programa que investe na fazenda conforme o progresso

dinheiro = 0;
leite = 0;

maquina(1);     # melhora o copo de leite
maquina(4);     # pequeno desconto na compra de vacas

enquanto (vacas < 10) {
    ordenhar();
    vender(15);
    se (dinheiro > 50) {
        comprar_vaca();
    }
}

se (vacas >= 10) {
    comprar_fazenda();
}

resultado();
